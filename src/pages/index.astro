---
import { Image } from "astro:assets";
import "../styles/global.css";
import { en } from "../i18n/en";
import { getData, type Country } from "country-list";
import ParticipateDialog from "../components/ParticipateDialog";
import Header from "../components/Header";
const { communities } = en.communities;
const countries = getData().sort((a: Country, b: Country) =>
  a.name.localeCompare(b.name),
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>hack@latam</title>
  </head>
  <body
    class="bg-bg text-tx text-xl font-serif p-4 md:p-8 space-y-4 text-pretty"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pb-8">
      <main class="space-y-16">
        <div class="space-y-2">
          <p class="text-tx-2">Hackathon para el bien social</p>
          <h1 class="text-6xl md:text-8xl font-sans">hack@latam</h1>
          <p class="text-balance">
            América Latina se une para atacar los problemas que más afectan a la
            región.
          </p>
          <p>
            Desde corrupción a seguridad pública. <br /> Programemos un futuro mejor.
          </p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-16">
          <div
            class="p-4 border border-ui-2 flex flex-col gap-1 items-center text-center"
          >
            <span class="text-4xl font-sans">3</span>
            <span class="text-tx-2">Días</span>
          </div>
          <div
            class="p-4 border border-ui-2 flex flex-col gap-1 items-center text-center"
          >
            <span class="text-4xl font-sans">4</span>
            <span class="text-tx-2">Temáticas</span>
          </div>
          <div
            class="p-4 border border-ui-2 flex flex-col gap-1 items-center text-center"
          >
            <span class="text-4xl font-sans">150</span>
            <span class="text-tx-2">Participantes</span>
          </div>
          <div
            class="col-span-1 sm:col-span-3 border border-ui-2 p-4 space-y-4 grid grid-cols-1 md:grid-cols-3 gap-4"
          >
            <div class="flex items-center justify-center">
              <pre
                class="font-mono text-[5px] leading-none text-tx-2 select-none">
               ,,ggddY"""Ybbgg,,
