---
import { Image } from "astro:assets";

interface Community {
  logo: string;
  name: string;
  desc: string;
  logoSmall?: boolean;
  logoCentered?: boolean;
}

interface Props {
  communities: readonly Community[];
}

const { communities } = Astro.props;
---

<div class="space-y-4">
  <h3 class="text-tx-2 text-balance">Comunidades</h3>
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 pb-4">
    {
      communities.map((c) => (
        <div class="border border-ui p-4 aspect-square flex flex-col justify-center items-center text-center gap-4">
          <div class="w-full aspect-square flex items-center justify-center shrink-0">
            <Image
              src={c.logo}
              alt={c.name}
              width={200}
              height={200}
              class={`w-full h-full object-contain ${"logoSmall" in c && c.logoSmall ? "max-w-[70%] max-h-[70%]" : ""} ${"logoCentered" in c && c.logoCentered ? "w-auto h-auto max-w-full max-h-full" : ""}`}
            />
          </div>
        </div>
      ))
    }
  </div>
</div>
