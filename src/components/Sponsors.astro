---
const communities = [
  { logo: "/communities/ai-playgrounds.png", name: "ai playgrounds", desc: "AI for everyone" },
  // { logo: "/communities/indies.png", name: "indies.la", desc: "home for crazy, ambitious founders" },
  { logo: "/communities/nucleo.png", name: "nucleo", desc: "AI systems for founders" },
  { logo: "/communities/the-hackathon-company.png", name: "the hackathon company", desc: "orchestrate world-class hackathons" },
];
---

<div class="space-y-6 font-sans">
  <div class="space-y-4">
    <h3 class="text-xl text-tx-2">communities</h3>
    <div class="grid grid-cols-2 gap-2">
      {communities.map((c) => (
        <div class="border border-ui p-4 aspect-square flex flex-col justify-center items-center text-center gap-2">
          <img src={c.logo} alt={c.name} class="w-full flex-1 object-contain" />
          <p class="text-tx-2 text-base">{c.desc}</p>
        </div>
      ))}
    </div>
  </div>
</div>
